<!-- views/list.hbs -->
<!DOCTYPE html>
<html>

<head>
  <title>Shopping List App</title>
</head>

<body>
  <h1>Active Shopping Lists</h1>
  <ul>
    {{#each shoppingLists}}
    <li><a href="/list/{{id}}">{{name}}</a></li>
    {{/each}}
  </ul>
  <form action="/list" method="POST">
    <input type="text" name="name" placeholder="Enter a new shopping list name">
    <button type="submit">Add</button>
  </form>
</body>
</html>